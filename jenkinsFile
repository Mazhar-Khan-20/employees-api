pipeline {
    agent any
    stages {
        stage('Build Application') {
            steps {
                bat 'mvn -B -U -e -V clean -DskipTests package'
            }
        }
        stage('Test Application') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Deploy Application') {
            steps {
                bat 'mvn -U -V -e -B -DskipTests -Pdev deploy -DmuleDeploy'
            }
        }

    }
}
